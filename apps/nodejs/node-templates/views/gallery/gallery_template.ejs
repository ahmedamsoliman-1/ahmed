<%- include ('../partials/header') %>

    <style>
        .card {
            width: 400px;
            margin-right: 2%;
            margin-bottom: 20px;
            float: left;
            height: 400px; /* Fixed height for the card */
        }

        .card img {
            width: 100%;
            height: 100%; /* Ensure the image fills the card */
            object-fit: cover; /* Maintain aspect ratio and fill the card */
        }

        @media (max-width: 992px) {
            .card {
                width: calc(25% - 4%);
            }
        }

        @media (max-width: 768px) {
            .card {
                width: calc(33.333% - 4%);
            }
        }

        @media (max-width: 576px) {
            .card {
                width: calc(50% - 4%);
            }
        }

        @media (max-width: 400px) {
            .card {
                width: 100%;
                margin-right: 0;
            }
        }
    </style>


    <div class="jumbotron">
        <h1>AAMS</h1>
        <h2>GALLERY</h2>
    </div>

    <div class="jumbotron">
        <h1>Upload Image</h1>
        <div id="upload">
        </div>
        <form action="/gallery/upload-image" method="POST" enctype="multipart/form-data" id="upload-form">
            <input type="file" name="image" id="upload-input">
            <label for="upload-input">Choose file</label>
            <button class="btn btn-warning" type="submit" id="upload-button">Upload</button>
        </form>
    </div>

    
    <div class="jumbotron">
        <h1>Gallery</h1>
        <div id="gallery">
            <% for (var i = 0; i < images.length; i += 7) { %>
                <div class="row">
                    <% for (var j = i; j < Math.min(i + 7, images.length); j++) { %>
                        <div class="col">
                            <div class="card">
                                <img src="<%- images[j].url %>" alt="image" class="card-img-top">
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>


    



<%- include ('../partials/footer') %>

