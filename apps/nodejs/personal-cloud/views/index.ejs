

<%- include('partials/header') %>

<div class="jumbotron">
    <h1>AAMS Cloud</h1>
</div>


<div class="jumbotron">
    <div class="card-deck">
        <div class="card text-center" style="min-height: 300px;">
            <div class="btn btn-light">
                <img src="/img/docker.png" alt="Vercel Image" class="card-img-top" style="max-width:100%; height:auto;">
                <div>
                    <a href="/docker" class="btn btn-success mt-3">On Docker</a>
                </div>
            </div>
        </div>
        <div class="card text-center" style="min-height: 300px;">
            <div class="btn btn-light">
                <img src="/img/vercel.png" alt="Vercel Image" class="card-img-top" style="max-width:100%; height:auto;">
                <div>
                    <a href="/vercel" class="btn btn-success mt-3">On Vercel</a>
                </div>
            </div>
        </div>
        <div class="card text-center" style="min-height: 300px;">
            <div class="btn btn-light">
                <img src="/img/render.png" alt="Render Image" class="card-img-top" style="max-width:100%; height:auto;">
                <div>
                    <a href="/render" class="btn btn-success mt-3">On Render</a>
                </div>
            </div>
        </div>
        <div class="card text-center" style="min-height: 300px;">
            <div class="btn btn-light">
                <img src="/img/gitthub.png" alt="Render Image" class="card-img-top" style="max-width:100%; height:auto;">
                <div>
                    <a href="/github" class="btn btn-success mt-3">On GitHub Pages</a>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="jumbotron">
    <a href="#" class="btn btn-danger"><%= node %></a>
</div>



<div class="container">
    <div class="row">
        <% services.forEach(service => { %>
        <div class="col-md-3 mb-4">
            <div class="card text-center" style="min-height: 250px; position: relative; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); border-radius: 12px; overflow: hidden;">
                <div class="card-header" style="background-color: <% if (service.platform === 'render') { %> #003366 <% } else if (service.platform === 'vercel') { %> #000 <% } else if (service.platform === 'github') { %> #b22222 <% } %>; color: white; padding: 10px;">
                    <span style="font-size: 1rem; font-weight: bold;"><%= service.platform === 'render' ? 'Render' : (service.platform === 'vercel' ? 'Vercel' : 'GitHub') %></span>
                </div>
                <div class="card-body">
                    <p class="card-title" style="font-size: 1.2rem; font-weight: 600;"><%= service.name %></p>
                    <a href="<%= service.url %>" class="btn btn-light mt-3">Visit</a>
                    <% if (service.repo) { %>
                        <a href="<%= service.repo %>" class="btn btn-light mt-3">Code</a>
                    <% } %>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>


<%- include('partials/footer') %>



