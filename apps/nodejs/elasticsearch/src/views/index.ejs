<%- include('header') %>

<div class="container">
    <h1>AAMSDN Elastic Search</h1>
    <div>
        <h4>Ahmed </h4>
        <p></p>
        <div class="card-deck">
            <div class="card-body card bg-dark text-white">
                <div class="card-text">
                    <a class="btn btn-danger" target="_blank" href="/users">Users</a>
                </div>
            </div>
            <div class="card-body card bg-dark text-white">
                <div class="card-text">
                    <a class="btn btn-success" target="_blank" href="/orders">Orders</a>
                </div>
            </div>
        </div>
    </div>
    <br>



    <h3>Index Contents</h3>
    <% indexContents.forEach(function(indexContent) { %>
        <h4>Index: <%= indexContent.index %></h4>
        <ul>
            <% indexContent.documents.forEach(function(doc) { %>
                <li>
                    <strong>ID:</strong> <%= doc._id %><br>
                    <strong>Source:</strong> <%= JSON.stringify(doc._source) %>
                </li>
            <% }); %>
        </ul>
    <% }); %>

</div>

<div class="jumbotron">
    <p>Dev Version: <strong style="color: rgb(87, 13, 13);">1.1.3</strong></p>
</div>

<%- include('footer') %>
